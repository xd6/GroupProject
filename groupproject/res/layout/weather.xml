<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <RelativeLayout
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_alignParentLeft="true"
		android:layout_alignParentTop="true"
		android:id="@+id/layout1" >"
	    <ImageView
	        android:id="@+id/weather_1_image"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_centerVertical="true" />
	    
	    <TextView
	        android:id="@+id/weather_1_text"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_toRightOf="@+id/weather_1_image"
	        android:layout_centerVertical="true" />
    </RelativeLayout>
    
    <RelativeLayout
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_below="@+id/layout1"
		android:id="@+id/layout2" >
	    <ImageView
	        android:id="@+id/weather_2_image"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_centerVertical="true" />
	    
	    <TextView
	        android:id="@+id/weather_2_text"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_toRightOf="@+id/weather_2_image"
	        android:layout_centerVertical="true" />
    </RelativeLayout>
    
    <RelativeLayout
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_below="@+id/layout2"
		android:id="@+id/layout3" >
	    <ImageView
	        android:id="@+id/weather_3_image"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_centerVertical="true" />
	    
	    <TextView
	        android:id="@+id/weather_3_text"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_toRightOf="@+id/weather_3_image"
	        android:layout_centerVertical="true" />
    </RelativeLayout>
    
    <RelativeLayout
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_below="@+id/layout3"
		android:id="@+id/layout4" >
	    <ImageView
	        android:id="@+id/weather_4_image"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_centerVertical="true" />
	    
	    <TextView
	        android:id="@+id/weather_4_text"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_toRightOf="@+id/weather_4_image"
	        android:layout_centerVertical="true" />
    </RelativeLayout>
    
    <RelativeLayout
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_below="@+id/layout4"
		android:id="@+id/layout5" >
	    <ImageView
	        android:id="@+id/weather_5_image"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_centerVertical="true" />
	    
	    <TextView
	        android:id="@+id/weather_5_text"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_toRightOf="@+id/weather_5_image"
	        android:layout_centerVertical="true" />
    </RelativeLayout>


</RelativeLayout>
